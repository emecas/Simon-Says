<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/color_boton_pressed" />
      <stroke
          android:width="1dp"
          android:color="@color/color_boton_pressed" />
      <corners
          android:radius="@dimen/form_corner_radius" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid
          android:color="@color/color_tema" />
      <stroke
          android:width="1dp"
          android:color="@color/color_tema" />
      <corners
          android:radius="@dimen/form_corner_radius" />
      <padding
          android:left="4dp"
          android:top="4dp"
          android:right="4dp"
          android:bottom="4dp" />
    </shape>
  </item>
</selector>

