<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="40dp"
    android:orientation="vertical"
    android:background="@drawable/background" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash"
        android:contentDescription="@string/app_name"
        android:layout_marginBottom="10dp" 
        />
    
    <Button
        android:id="@+id/mainmenu_bt_new_game"
        style="@style/EstiloMenuButton"
        android:background="@drawable/button_rounded_corners"
        android:text="@string/mainmenu_new_game"
        android:layout_marginBottom="7dp"
        android:onClick="onClick" />
    
    <Button
        android:id="@+id/mainmenu_bt_games"
        style="@style/EstiloMenuButton"
        android:background="@drawable/button_rounded_corners"
        android:text="@string/mainmenu_games"
        android:layout_marginBottom="7dp"
        android:onClick="onClick" />
    
    <Button
        android:id="@+id/mainmenu_bt_friends"
        style="@style/EstiloMenuButton"
        android:background="@drawable/button_rounded_corners"
        android:text="@string/mainmenu_friends"
        android:onClick="onClick" />
    
   

</LinearLayout>
